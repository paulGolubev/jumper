-SetGraphics%(g:brl.graphics.TGraphics)="_brl_glgraphics_TGLGraphicsDriver_SetGraphics"
-Flip%(sync%)="_brl_glgraphics_TGLGraphicsDriver_Flip"
}="brl_glgraphics_TGLGraphicsDriver"
GLGraphicsDriver:TGLGraphicsDriver()="brl_glgraphics_GLGraphicsDriver"
GLGraphics:brl.graphics.TGraphics(width%,height%,depth%=0,hertz%=60,flags%=10)="brl_glgraphics_GLGraphics"
GLAdjustTexSize%(width% Var,height% Var)="brl_glgraphics_GLAdjustTexSize"
GLTexFromPixmap%(pixmap:brl.pixmap.TPixmap,mipmap%=1)="brl_glgraphics_GLTexFromPixmap"
GLDrawRect%(x%,y%,width%,height%)="brl_glgraphics_GLDrawRect"
GLDrawText%(text$,x%,y%)="brl_glgraphics_GLDrawText"
