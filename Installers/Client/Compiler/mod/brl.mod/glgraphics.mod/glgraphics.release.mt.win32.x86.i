import brl.blitz
import brl.graphics
import brl.pixmap
import pub.opengl
TGLGraphics^brl.graphics.TGraphics{
._context%&
-New%()="_brl_glgraphics_TGLGraphics_New"
-Driver:TGLGraphicsDriver()="_brl_glgraphics_TGLGraphics_Driver"
-GetSettings%(width% Var,height% Var,depth% Var,hertz% Var,flags% Var)="_brl_glgraphics_TGLGraphics_GetSettings"
-Close%()="_brl_glgraphics_TGLGraphics_Close"
}="brl_glgraphics_TGLGraphics"
TGLGraphicsDriver^brl.graphics.TGraphicsDriver{
-New%()="_brl_glgraphics_TGLGraphicsDriver_New"
